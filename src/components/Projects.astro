---
const PROJECTS = [
  {
    title: "Proyecto 1",
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic cumque repudiandae excepturi facere unde numquam possimus soluta minus eligendi, dolorem temporibus mollitia incidunt fuga adipisci asperiores debitis illum cum reprehenderit?",
    link: "https://svgl.vercell.app",
    github: "#",
    image: "/projects/svgl.webp",
    tags: ["HTML", "CSS", "JAVASCRIPT"],
  },
];
---

{
  PROJECTS.map((project) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{project.title}</h3>
      <p class="text-lg mb-4 text-pretty">{project.description}</p>
      <ul class="flex items-center justify-start gap-x-3 mb-4">
        {project.tags.map((tag) => (
          <li class="bg-blue-400/40 py-1 px-3 rounded-full">{tag}</li>
        ))}
      </ul>
      <img class="rounded shadow-2xl shadow-white/10" src={project.image} alt={project.title} />
    </article>
  ))
}
